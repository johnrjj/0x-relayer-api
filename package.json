{
  "name": "0x-relayer-api",
  "version": "0.0.1",
  "description": "0x relayer api",
  "main": "dist/index.js",
  "author": "john johnson",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index",
    "dev": "ts-node src/index",
    "test": "jest",
    "prettier": "prettier --single-quote --print-width 100 --trailing-comma es5 --write 'src/**/*.ts'",
    "deploy": "now && now alias && now 0x-relayer-api --safe",
    "now-start": "node dist/index",
    "heroku-postbuild": "npm run build",
    "start:docker": "docker-compose up"
  },
  "dependencies": {
    "0x.js": "^0.27.1",
    "@0xproject/json-schemas": "^0.6.7",
    "bignumber.js": "^4.1.0",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "date-fns": "^1.29.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.1",
    "express-winston": "^2.4.0",
    "express-ws": "^3.0.0",
    "functional-red-black-tree": "^1.0.1",
    "helmet": "^3.8.2",
    "immutable-sorted": "^0.1.0",
    "morgan": "^1.9.0",
    "pg": "^7.3.0",
    "redis": "^2.8.0",
    "sql-template-strings": "^2.2.2",
    "web3-provider-engine": "^13.3.3",
    "winston": "^2.4.0",
    "ws": "^3.2.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/cors": "^2.8.1",
    "@types/express": "^4.0.37",
    "@types/helmet": "^0.0.36",
    "@types/jest": "^21.1.2",
    "@types/morgan": "^1.7.33",
    "@types/node": "^8.0.46",
    "@types/pg": "^7.1.4",
    "@types/redis": "^2.8.1",
    "@types/winston": "^2.3.6",
    "@types/ws": "^3.2.0",
    "jest": "^21.2.1",
    "prettier": "^1.8.2",
    "ts-jest": "^21.1.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "tslint-config-0xproject": "^0.0.2",
    "typescript": "^2.5.3",
    "web3-typescript-typings": "^0.6.2"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "now": {
    "alias": "0x-relayer-api"
  }
}
